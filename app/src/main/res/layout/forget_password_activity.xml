<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/head_login"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:id="@+id/re_idcard"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/forget_password_import_phone"
                    android:drawablePadding="16dp"
                    android:textSize="13dp"
                    android:hint="请输入您的手机号"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:drawableLeft="@mipmap/phone"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:theme="@style/MyEditText"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/yanzheng_import_text"
                        android:drawablePadding="16dp"
                        android:textSize="13dp"
                        android:hint="请输入验证码"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:drawableLeft="@mipmap/code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:theme="@style/MyEditText"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/login_yanzheng"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/yanzhengma_btn"
                        android:text="获取验证码"
                        android:textColor="#A90D14"
                        android:background="@drawable/textview_round_border_red"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_delu_password"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/login_import_dlpassword"
                    android:drawablePadding="13dp"
                    android:textSize="13dp"
                    android:hint="请重新设置密码"
                    android:password="true"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:drawableLeft="@mipmap/lock"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:theme="@style/MyEditText"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_quren_password"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/login_import_qrpassword"
                    android:drawablePadding="13dp"
                    android:textSize="13dp"
                    android:password="true"
                    android:hint="请确认您的密码"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:drawableLeft="@mipmap/lock"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:theme="@style/MyEditText"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/red_round_border"
                    android:text="登录"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
