<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:background="@color/system_color"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/system_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="邀请好友"
                android:textSize="18dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:background="#fafafa"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <RelativeLayout
                android:background="@drawable/invite_banner"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/white_round_border"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="180dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="13dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">

                            <RelativeLayout
                                android:id="@+id/wechat"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@mipmap/wechat2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                                <TextView
                                    android:layout_marginBottom="5dp"
                                    android:textColor="#1A1A1A"
                                    android:text="微信好友"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/wechat_moments"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:src="@mipmap/friend"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                                <TextView

                                    android:textColor="#1A1A1A"
                                    android:text="朋友圈"
                                    android:layout_marginBottom="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:id="@+id/sina"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:src="@mipmap/sina"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageView33"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                                <TextView
                                    android:layout_marginBottom="5dp"
                                    android:textColor="#1A1A1A"
                                    android:text="新浪微博"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignRight="@+id/imageView33"
                                    android:layout_alignEnd="@+id/imageView33" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/qq"
                                    android:textColor="#1A1A1A"
                                    android:text="QQ好友"
                                    android:drawableTop="@mipmap/qq"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/qq_space"
                                    android:textColor="#1A1A1A"
                                    android:text="QQ空间"
                                    android:drawableTop="@mipmap/space"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/message"
                                    android:textColor="#1A1A1A"
                                    android:text="短信"
                                    android:gravity="center"
                                    android:drawableTop="@mipmap/note"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:text="点击上面任意"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView17"
                            android:layout_marginLeft="29dp"
                            android:layout_marginStart="29dp"
                            android:layout_alignBaseline="@+id/textView8"
                            android:layout_alignBottom="@+id/textView8"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:textColor="#CC5B17"
                            android:textSize="17dp"
                            android:text="按钮"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textView17"
                            android:layout_toEndOf="@+id/textView17" />
                        <TextView
                            android:textSize="17dp"
                            android:text="邀请好友，您将获得"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textView8"
                            android:layout_toEndOf="@+id/textView8" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginTop="-10dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="￥"
                                    android:textColor="#333333"
                                    android:textSize="28dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:layout_centerVertical="true"
                                    android:text="5"
                                    android:textSize="40dp"
                                    android:textColor="#D3161E"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="元"
                                    android:textSize="27dp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="+"
                                    android:textColor="#333333"
                                    android:textSize="38dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:src="@drawable/heart_fense_1"
                                    android:layout_width="27dp"
                                    android:layout_height="27dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="2"
                                    android:textColor="#1A1A1A"
                                    android:textSize="30dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="枚"
                                    android:textColor="#1A1A1A"
                                    android:textSize="27dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

         <RelativeLayout
            android:id="@+id/invite_touxiang"
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

             <ImageView
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginLeft="99dp"
                 android:layout_marginStart="99dp"
                 android:id="@+id/circle_1"
                 android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                 android:layout_alignParentStart="true" />
             <ImageView
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginLeft="-7dp"
                 android:layout_alignTop="@+id/circle_1"
                 android:layout_toRightOf="@+id/circle_1"
                 android:layout_toEndOf="@+id/circle_1"
                 android:id="@+id/circle_2" />

             <ImageView
                 android:id="@+id/circle_3"
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginLeft="-7dp"
                 android:layout_alignTop="@+id/circle_2"
                 android:layout_toRightOf="@+id/circle_2"
                 android:layout_toEndOf="@+id/circle_2" />
             <ImageView
                 android:layout_marginLeft="-7dp"
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_alignTop="@+id/circle_3"
                 android:layout_toRightOf="@+id/circle_3"
                 android:layout_toEndOf="@+id/circle_3"
                 android:id="@+id/circle_4" />
             <ImageView
                 android:layout_marginLeft="-7dp"
                 android:id="@+id/circle_8"
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_alignTop="@+id/circle_7"
                 android:layout_toRightOf="@+id/circle_7"
                 android:layout_toEndOf="@+id/circle_7" />
             <ImageView
                 android:layout_marginLeft="-7dp"
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_alignTop="@+id/circle_6"
                 android:layout_toRightOf="@+id/circle_6"
                 android:layout_toEndOf="@+id/circle_6"
                 android:id="@+id/circle_7" />
             <ImageView
                 android:layout_marginLeft="-7dp"
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_alignTop="@+id/circle_5"
                 android:layout_toRightOf="@+id/circle_5"
                 android:layout_toEndOf="@+id/circle_5"
                 android:id="@+id/circle_6" />
             <ImageView
                 android:layout_marginLeft="-7dp"
                 android:src="@mipmap/portrait"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_alignTop="@+id/circle_4"
                 android:layout_toRightOf="@+id/circle_4"
                 android:layout_toEndOf="@+id/circle_4"
                 android:id="@+id/circle_5" />

        </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/chakanxiangxi_guize"
                    android:text="@string/chakan"
                    android:textColor="#1A1A1A"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
