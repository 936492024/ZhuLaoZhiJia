<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_weight="7"
        android:background="@drawable/activity_win"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textSize="22sp"
            android:textColor="#333333"
            android:text="打卡成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/textView96"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:textSize="18dp"
            android:textColor="#FFC62D"
            android:text="每日5:00-8:00打卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView96"
            android:layout_centerHorizontal="true" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/cancel_dialog"
            android:text="继续报名参加打卡"
            android:textSize="17dp"
            android:background="@drawable/orange_round_border"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="21dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/game_clock_dialog_cancel"
            android:src="@drawable/cancel"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>
