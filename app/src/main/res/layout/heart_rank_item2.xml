<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">


    <RelativeLayout
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/heart_no2_silver"
                    android:src="@mipmap/yinpai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/heart_no2_head"
                    android:src="@mipmap/portrait"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/heart_no2_silver"
                    android:layout_toEndOf="@+id/heart_no2_silver"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp" />
                    <TextView
                        android:id="@+id/heart_no2_nickname"
                        android:textColor="#444"
                        android:text="助人为乐"
                        android:textSize="17dp"
                        android:layout_marginLeft="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/heart_no2_head"
                        android:layout_toRightOf="@+id/heart_no2_head"
                        android:layout_toEndOf="@+id/heart_no2_head"
                        android:layout_marginStart="23dp" />
                <ImageView
                    android:src="@mipmap/yaoqing"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:id="@+id/rt_2"
                    android:layout_marginTop="-5dp"
                    android:layout_below="@+id/heart_no23_zannum"
                    android:layout_alignLeft="@+id/heart_no2_nickname"
                    android:layout_alignStart="@+id/heart_no2_nickname" />

                    <TextView
                        android:textSize="13dp"
                        android:text="累计分享"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yaoqings"
                        android:layout_marginTop="-3dp"
                        android:layout_marginLeft="4dp"
                        android:layout_alignTop="@+id/rt_2"
                        android:layout_toRightOf="@+id/rt_2"
                        android:layout_toEndOf="@+id/rt_2" />

                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/heart_no2_personnum"
                        android:text="1052"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/yaoqings"
                        android:layout_alignBottom="@+id/yaoqings"
                        android:layout_toRightOf="@+id/yaoqings"
                        android:layout_toEndOf="@+id/yaoqings" />





                <ImageView
                    android:id="@+id/heart_no23_zan"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/heart_no23_zannum"
                    android:layout_toStartOf="@+id/heart_no23_zannum" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/heart_no23_zannum"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/praise_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="1dp"
                android:id="@+id/heart_no2_zan"
                android:src="@mipmap/greyzan"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                 />
            <TextView
                android:layout_marginLeft="6dp"
                android:text="1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heart_no2_zannum"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/heart_no2_zan"
                android:layout_toEndOf="@+id/heart_no2_zan" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
