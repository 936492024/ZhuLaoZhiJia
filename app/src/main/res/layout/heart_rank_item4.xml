<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">


    <RelativeLayout
        android:layout_weight="4"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="70dp">
        <TextView
            android:text="4"
            android:id="@+id/heart_no4_silver"
            android:src="@mipmap/tongpai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:id="@+id/heart_no4_head"
            android:src="@mipmap/portrait"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/heart_no4_silver"
            android:layout_toEndOf="@+id/heart_no4_silver"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />
        <TextView
            android:id="@+id/heart_no4_nickname"
            android:textColor="#444"
            android:text="助人为乐"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="-5dp"
            android:layout_above="@+id/heart_no45_zan"
            android:layout_toRightOf="@+id/heart_no4_head"
            android:layout_toEndOf="@+id/heart_no4_head" />
        <ImageView
            android:src="@mipmap/yaoqing"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:id="@+id/rt_4"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/heart_no45_zannum"
            android:layout_alignLeft="@+id/heart_no4_nickname"
            android:layout_alignStart="@+id/heart_no4_nickname" />

        <TextView
            android:textSize="13dp"
            android:text="累计分享"
            android:layout_marginTop="-5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/juanzeng_2"
            android:layout_below="@+id/heart_no45_zan"
            android:layout_toRightOf="@+id/rt_4"
            android:layout_toEndOf="@+id/rt_4"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

        <TextView
            android:textSize="15dp"
            android:id="@+id/heart_no4_personnum"
            android:text="1052"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/juanzeng_2"
            android:layout_alignBottom="@+id/juanzeng_2"
            android:layout_toRightOf="@+id/juanzeng_2"
            android:layout_toEndOf="@+id/juanzeng_2" />

        <ImageView
            android:id="@+id/heart_no45_zan"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/heart_no45_zannum"
            android:layout_toStartOf="@+id/heart_no45_zannum" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heart_no45_zannum"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/praise_4"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/heart_no4_zan"
            android:src="@mipmap/greyzan"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
             />
        <TextView
            android:text="1000"
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heart_no4_zannum"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/heart_no4_zan"
            android:layout_toEndOf="@+id/heart_no4_zan" />
    </RelativeLayout>


    </LinearLayout>

</LinearLayout>

