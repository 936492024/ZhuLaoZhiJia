                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
