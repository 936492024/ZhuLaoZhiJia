                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/grey_round_border">

                                <TextView
                                    android:id="@+id/textView26"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginStart="21dp"
                                    android:text="真实姓名"
                                    android:textColor="#333333"
                                    android:textSize="13dp" />

                                <EditText
                                    android:enabled="false"
                                    android:id="@+id/benren_name"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignBaseline="@+id/textView26"
                                    android:layout_alignBottom="@+id/textView26"
                                    android:layout_marginLeft="29dp"
                                    android:layout_marginStart="29dp"
                                    android:layout_toEndOf="@+id/textView26"
                                    android:layout_toRightOf="@+id/textView26"
                                    android:hint="请输入该成员的真实姓名"
                                    android:textColor="#333333"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/grey_round_border">

                                <TextView
                                    android:id="@+id/textView236"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="21dp"
                                    android:layout_marginStart="21dp"
                                    android:text="身份证号"
                                    android:textColor="#333333"
                                    android:textSize="13dp" />

                                <EditText
                                    android:enabled="false"
                                    android:id="@+id/benren_id"
                                    android:background="@null"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignBaseline="@+id/textView236"
                                    android:layout_alignBottom="@+id/textView236"
                                    android:layout_marginLeft="29dp"
                                    android:layout_marginStart="29dp"
                                    android:layout_toEndOf="@+id/textView236"
                                    android:layout_toRightOf="@+id/textView236"
                                    android:hint="请输入该成员的身份证号码"
                                    android:textColor="#333333"
                                    android:textSize="13dp" />
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>
            </LinearLayout>

            <TextView
                android:background="#EBEBEB"
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:text="请确认缴费金额"
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="129dp"
                    android:layout_marginEnd="129dp" />
                <TextView
                    android:background="#D6D6D6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


            <com.zhulaozhijias.zhulaozhijia.widgets.MyRadioGroup
