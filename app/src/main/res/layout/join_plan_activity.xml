                                android:textColor="@color/system_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView254"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textView242"
                                android:layout_toEndOf="@+id/textView242" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
