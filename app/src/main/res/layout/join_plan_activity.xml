                                android:layout_height="wrap_content"
                                android:id="@+id/textView25"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/textView24"
                                android:layout_toEndOf="@+id/textView24" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
