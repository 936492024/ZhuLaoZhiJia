                                    android:layout_height="15dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginEnd="5dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
