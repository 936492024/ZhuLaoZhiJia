<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AC141C">

            <LinearLayout
                android:id="@+id/order_back"
                android:orientation="horizontal"
                android:layout_width="55dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"

                            android:src="@mipmap/back_white" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="返回"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="一份爱心，一份功德"
                android:textSize="18dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--<TextView-->
                    <!--android:textSize="15sp"-->
                    <!--android:textColor="#333333"-->
                    <!--android:text="支付金额："-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/textView301"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--android:layout_alignParentStart="true"-->
                    <!--android:layout_marginLeft="17dp"-->
                    <!--android:layout_marginStart="17dp" />-->
                <!--<TextView-->
                    <!--android:id="@+id/pay_money"-->
                    <!--android:textSize="15sp"-->
                    <!--android:textColor="#333333"-->
                    <!--android:text="0元"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignTop="@+id/textView301"-->
                    <!--android:layout_toRightOf="@+id/textView301"-->
                    <!--android:layout_toEndOf="@+id/textView301" />-->
                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#E1C066"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView1534" />
                <TextView
                    android:text="捐助金额"
                    android:textColor="#444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:background="#D6D6D6"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <com.zhulaozhijias.zhulaozhijia.widgets.MyRadioGroup
            android:id="@+id/myRadioGroup_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:checked="true"
                    android:id="@+id/radioButton_pay_1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rdobtn_selecter"
                    android:button="@null"
                    android:gravity="center"
                    android:text="1元"
                    />

                <RadioButton
                    android:id="@+id/radioButton_pay_2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rdobtn_selecter"
                    android:button="@null"
                    android:gravity="center"
                    android:text="2元"
                    />

                <RadioButton
                    android:id="@+id/radioButton_pay_3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rdobtn_selecter"
                    android:button="@null"
                    android:gravity="center"
                    android:text="5元"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_pay_4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rdobtn_selecter"
                    android:button="@null"
                    android:gravity="center"
                    android:text="10元"
                    />
                <EditText
                    android:id="@+id/myRadioGroup_2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/rdobtn_selecter"
                    android:button="@null"
                    android:gravity="center"
                    android:windowSoftInputMode="stateHidden|stateAlwaysHidden"
                    android:hint="自定义金额     (元)" />

            </LinearLayout>
        </com.zhulaozhijias.zhulaozhijia.widgets.MyRadioGroup>
        <TextView
            android:background="#F0F0F0"
            android:layout_width="match_parent"
            android:layout_height="7dp" />
        <LinearLayout
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#E1C066"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView153" />
                <TextView
                    android:text="支付方式"
                    android:textColor="#444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:background="#D6D6D6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="135dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_weight="1.1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@mipmap/wallet"
                                    android:layout_width="37dp"
                                    android:layout_height="37dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="#333333"
                                    android:textSize="13dp"
                                    android:text="账户支付"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:text="爱心账户支付"
                                    android:textSize="11dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:background="#D6D6D6"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_weight="1.1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/weixin"
                                    android:layout_width="37dp"
                                    android:layout_height="37dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="#333333"
                                    android:textSize="13dp"
                                    android:text="微信支付"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:text="微信安全支付"
                                    android:textSize="11dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:background="#D6D6D6"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_weight="1.1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:src="@drawable/zhifubao"
                                    android:layout_width="37dp"
                                    android:layout_height="37dp"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true" />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="#333333"
                                    android:textSize="13dp"
                                    android:text="支付宝支付"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="3dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentStart="true" />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_marginTop="3dp"
                                    android:text="支付宝安全支付"
                                    android:textSize="11dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <com.zhulaozhijias.zhulaozhijia.widgets.MyRadioGroup
                android:id="@+id/radiogroup_4"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:text="1"
                        android:textColor="@color/white"
                        android:id="@+id/radioButtons7"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/selector_bar2"
                        android:src="@mipmap/correct" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#D6D6D6"
                        android:layout_above="@+id/radioButton7"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="11.5dp"/>

                    <RadioButton
                        android:textColor="@color/white"
                        android:text="2"
                        android:id="@+id/radioButton7"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignLeft="@+id/radioButtons7"
                        android:layout_alignStart="@+id/radioButtons7"
                        android:layout_centerVertical="true"
                        android:button="@null"
                        android:checked="false"
                        android:drawableLeft="@drawable/selector_bar2"
                        android:src="@mipmap/unselected" />

                    <TextView

                        android:id="@+id/textView95"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/radioButton7"
                        android:layout_marginTop="11.5dp"
                        android:background="#D6D6D6" />

                    <RadioButton
                        android:text="3"
                        android:textColor="@color/white"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignEnd="@+id/radioButton7"
                        android:layout_alignParentBottom="true"
                        android:layout_alignRight="@+id/radioButton7"
                        android:layout_marginBottom="11dp"
                        android:button="@null"
                        android:drawableLeft="@drawable/selector_bar2"
                        android:src="@mipmap/unselected" />
                </RelativeLayout>
            </com.zhulaozhijias.zhulaozhijia.widgets.MyRadioGroup>

        </LinearLayout>

        <TextView
            android:background="#D6D6D6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <RelativeLayout
            android:background="#FAFAFA"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout9"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="同意并接受"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/xieyi"
                    android:layout_alignBottom="@+id/xieyi"
                    android:id="@+id/textView41" />
                <TextView
                    android:text="《互帮互助基金平台捐赠协议》"
                    android:textColor="@color/system_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/xieyi_order"
                    android:layout_toRightOf="@+id/textView41"
                    android:layout_toEndOf="@+id/textView41" />
            </RelativeLayout>
         <Button
             android:id="@+id/sure_pay"
             android:text="确认支付"
             android:textColor="@color/white"
             android:layout_width="240dp"
             android:background="@drawable/red_round_border"
             android:layout_height="35dp"
             android:layout_below="@+id/relativeLayout9"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="10dp" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
