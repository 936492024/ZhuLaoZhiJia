<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AC141C">

            <LinearLayout
                android:id="@+id/mine_betting_back"
                android:orientation="horizontal"
                android:layout_width="55dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"

                            android:src="@mipmap/back_white" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="返回"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="话题押宝"
                android:textSize="18dp"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/game_guize_1"
            android:layout_margin="10dp"
            android:background="@drawable/topic_banner"
            android:layout_width="match_parent"
            android:layout_height="125dp">

        </RelativeLayout>
        <RelativeLayout

            android:background="@drawable/textview_round_border"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="255dp">

            <TextView
                android:textSize="17dp"
                android:textColor="#333333"
                android:text="#咖啡和茶你更倾向哪个？#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/title" />

            <TextView
                android:layout_marginRight="110dp"
                android:layout_marginLeft="15dp"
                android:background="#F0F0F0"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView79" />


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView79"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:id="@+id/textView40">
                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="截至20：00本场累计有"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/linearLayout4"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/textView40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/textview_round_border_red"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="15dp"
                            android:text="咖啡"
                            android:textColor="#FE5E5F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/red_title"
                            android:layout_marginTop="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/red_content"
                            android:layout_marginTop="2dp"
                            android:text="味道香浓醇厚"
                            android:textColor="#FE5E5F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/textview_roud_border_blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:textSize="15dp"
                            android:text="茶"
                            android:textColor="#5481FF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/blue_title"
                            android:layout_marginTop="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">
                        <TextView
                            android:id="@+id/blue_content"
                            android:layout_marginTop="2dp"
                            android:text="喝惯了"
                            android:textColor="#5481FF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignLeft="@+id/textView40"
                android:layout_alignStart="@+id/textView40"
                android:layout_marginTop="10dp"
                android:id="@+id/relativeLayout6">

                <ImageView
                    android:src="@mipmap/portrait"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/betting_img" />

                <TextView
                    android:textColor="#666666"
                    android:text="我的本场押注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/betting_img"
                    android:layout_toEndOf="@+id/betting_img"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/textView81" />

                <TextView
                    android:id="@+id/is_join"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:textColor="#666666"
                    android:text="我还没有参加，快去投注吧"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView81"
                    android:layout_alignBottom="@+id/textView81"
                    android:layout_toRightOf="@+id/textView81"
                    android:layout_toEndOf="@+id/textView81" />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rt_count_down"
                android:background="@drawable/textview_border_red_gamebetting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/relativeLayout6"
                android:layout_toRightOf="@+id/linearLayout6"
                android:layout_toEndOf="@+id/linearLayout6">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/count_down"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:text="停止押注，开奖倒计时:29:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:text="30"
                        android:id="@+id/count_down_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/count_down"
                        android:layout_alignBottom="@+id/count_down"
                        android:layout_toRightOf="@+id/count_down"
                        android:layout_toEndOf="@+id/count_down" />
                </LinearLayout>

            </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/relativeLayout6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout6">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/game_betting_red"
                    android:layout_marginLeft="15dp"
                    android:background="#FE5E5F"
                    android:gravity="center"
                    android:text="我要押红方"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/game_betting_blue"
                    android:textColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="#5481FF"
                    android:gravity="center"
                    android:text="我要押蓝方"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>


        </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/textview_round_border">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textSize="15dp"
                    android:textColor="#333333"
                    android:text="上期话题#买到回家的车票么？#"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/title_2" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="押注结果"
                    android:textColor="#666666"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:id="@+id/textView82" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_alignTop="@+id/textView82"
                    android:layout_toRightOf="@+id/textView82"
                    android:layout_toEndOf="@+id/textView82"
                    android:id="@+id/linearLayout5">

                    <RelativeLayout
                        android:id="@+id/rt_1"
                        android:layout_weight="0.3"
                        android:background="@drawable/textview_zhijiao_red"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:gravity="center"
                                android:textSize="12dp"
                                android:text="红方"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView78" />
                            <TextView
                                android:id="@+id/red_number"
                                android:gravity="center"
                                android:textSize="12dp"
                                android:text="32131"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/textView78"
                                android:layout_toEndOf="@+id/textView78" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="0.01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rt_2"
                        android:layout_weight="0.7"
                        android:background="@drawable/textview_zhijiao_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">
                            <TextView
                                android:id="@+id/blue_number"
                                android:gravity="center"
                                android:textSize="12dp"
                                android:text="蓝方23432人"
                                android:layout_marginLeft="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:textColor="#999999"
                    android:text="红方押注人数少，为获胜方（买到提早下手，搞定往返）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/winner"
                    android:layout_marginBottom="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignLeft="@+id/linearLayout5"
                    android:layout_alignStart="@+id/linearLayout5" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="上期最佳"
                    android:layout_marginLeft="15dp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView84"
                    android:layout_alignBaseline="@+id/winner_name"
                    android:layout_alignBottom="@+id/winner_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/winner_name"
                    android:text="鲸鱼先生赢得200颗爱心值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textView84"
                    android:layout_toEndOf="@+id/textView84" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:textColor="#666666"
                    android:text="我的押注"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView85"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp" />
                <TextView
                    android:text="押红方10颗爱心值，已赢得20颗爱心值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/my_team_my_code_my_win_code"
                    android:layout_alignBaseline="@+id/textView85"
                    android:layout_alignBottom="@+id/textView85"
                    android:layout_toRightOf="@+id/textView85"
                    android:layout_toEndOf="@+id/textView85"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:id="@+id/wangqi_rt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:textColor="#666666"
                        android:text="查看往期话题历史"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView86"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp" />
                    <ImageView
                        android:src="@mipmap/arrowright"
                        android:layout_width="13dp"
                        android:layout_height="13dp"

                        android:id="@+id/imageView27"
                        android:layout_alignTop="@+id/textView86"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="14dp"
                        android:layout_marginEnd="14dp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
