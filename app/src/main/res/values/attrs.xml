<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuItem">
        <attr name="text" format="string"></attr>
        <attr name="normalIicon" format="reference"></attr>
        <attr name="selectedIcon" format="reference"></attr>
    </declare-styleable>
    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension"/>
        <attr name="btnTextSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>

    <declare-styleable name="PieView">
        <attr name="centerTextSize" format="dimension" />
        <attr name="dataTextSize" format="dimension" />
        <attr name="centerTextColor" format="color" />
        <attr name="dataTextColor" format="color" />
        <attr name="circleWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="auto3d">
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
    </declare-styleable>
</resources>